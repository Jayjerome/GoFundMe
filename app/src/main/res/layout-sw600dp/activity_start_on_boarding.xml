<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.onboarding.StartOnBoardingActivity">


    <ImageView
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_marginTop="250dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/piggy_bank"
        android:src="@drawable/piggy_bank" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="220dp"
        app:behavior_hideable="false">

        <include layout="@layout/item_bottom_sheet_onboarding" />

    </FrameLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>